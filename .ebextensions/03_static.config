# .ebextensions/03_static.config
option_settings:
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: staticfiles  # Maps the /static URL to the staticfiles directory
container_commands:
  01_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true